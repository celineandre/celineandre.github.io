# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 3
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = false

[*.{html,php}]
indent_size = 2

[*.{css,scss}]
indent_size = 2
end_of_line = crlf

[*.{js,jsx}]
indent_size = 4

[*.json]
indent_size = 2

[*.md]
[*.markdown]
indent_size = 2
